{
  "name": "@yuva-devlab/tokens",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css.ts",
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tokens.css": "./dist/tokens.css",
    "./package.json": "./package.json"
  },
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean:build": "rm -rf dist",
    "clean:node_modules": "rm -rf node_modules",
    "clean:turbo": "rm -rf .turbo",
    "clean": "pnpm run clean:build && pnpm run clean:node_modules && pnpm run clean:turbo"
  },
  "devDependencies": {
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@yuva-devlab/colors": "workspace:*",
    "@yuva-devlab/eslint-config": "workspace:*",
    "@yuva-devlab/prettier-config": "workspace:*",
    "@yuva-devlab/typescript-config": "workspace:*",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.17.4"
  }
}
