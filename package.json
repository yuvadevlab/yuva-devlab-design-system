{
  "name": "yuva-devlab-workspace",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build --filter=!//",
    "build:packages": "turbo run build --filter ./packages/*",
    "build:apps": "turbo run build --filter ./apps/*",
    "dev": "turbo run dev --filter=!//",
    "lint": "turbo run lint --filter=!//",
    "lint:fix": "turbo run lint:fix --filter=!//",
    "format": "turbo run format --filter=!//",
    "format:check": "turbo run format:check --filter=!//",
    "type-check": "turbo run type-check --filter=!//",
    "test": "turbo run test --filter=!//",
    "clean": "turbo run clean --filter=!//",
    "validate": "pnpm run format:check && pnpm run lint && pnpm run type-check && pnpm run build",
    "fix": "pnpm run format && pnpm run lint:fix",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@yuva-devlab/cli": "workspace:*",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --no-warn-ignored --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  }
}
